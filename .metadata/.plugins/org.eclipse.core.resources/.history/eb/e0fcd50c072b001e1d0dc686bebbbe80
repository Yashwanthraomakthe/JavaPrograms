package StringPrograms;

public class NoOfCharacters {

	public static void main(String[] args) {
		String name = "The best of both worlds";
		int stringLength = name.length();

		int count = 0;
		for (int i = 0; i < stringLength; i++) {
			if (name.charAt(i) != ' ') {
				count = count++;
			}
		}

	}

}
