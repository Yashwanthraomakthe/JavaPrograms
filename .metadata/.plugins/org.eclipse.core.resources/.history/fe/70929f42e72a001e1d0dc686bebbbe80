package NumberPrograms;

public class ReversNumber {

	public static void main(String[] args) {
		int number = 2398;
		int reverse = 0;

		System.out.println(no % 10);
		System.out.println(no / 10);

		while (number!= 0) {
			int remainder = number % 10;  
			reverse = reverse * 10 + remainder;  
			number = number/10; 
		}
		
		System.out.println(reverse);

	}

}
